{% extends 'base.html.twig' %}

{% block title %}{{ parent() }} Me contacter{% endblock %}

{% block body %}
    <div class="container">

        <div class="row">
            <div class="col-12 col-lg-9">


                <div class="row justify-content-center mt-3">
                    <div class="col-lg-8">
                        <div class="card border-0 rounded-3 shadow-lg">
                            <div class="card-body p-4">
                                <div class="text-center">
                                    <div class="h1 fw-light navhead">Me contacter</div>
                                    <p class="mb-4 text-muted">
                                        Vous pouvez me contacter par ce formulaire
                                    </p>
                                </div>

                                {% for flashSuccess in app.flashes('success_contact') %}
                                    <div class="alert alert-success" role="alert">{{ flashSuccess }}</div>
                                {% endfor %}

                                {{ form_start(contactform) }}

                                <div class="form-floating mb-3">
                                    {{ form_widget(contactform.Contact_Name,
                                        {'attr': {'class':'form-control','placeholder': 'Votre nom'}}) }}
                                    {{ form_label(contactform.Contact_Name) }}
                                </div>

                                <div class="form-floating mb-3">
                                    {{ form_widget(contactform.Email_Contact,
                                        {'attr': {'class':'form-control','placeholder': 'Votre email'}}) }}
                                    {{ form_label(contactform.Email_Contact) }}
                                </div>

                                <div class="form-floating mb-3">
                                    {{ form_widget(contactform.Subject_Contact,
                                        {'attr': {'class':'form-select','placeholder': 'Sujet du contact'}}) }}
                                    {{ form_label(contactform.Subject_Contact) }}
                                </div>

                                <div class="form-floating mb-3">
                                    {{ form_widget(contactform.Message_Contact,
                                        {'attr': {'class':'form-control','placeholder': 'Sujet du contact'}}) }}
                                    {{ form_label(contactform.Message_Contact) }}
                                </div>

                                <!-- Submit button -->
{#                                <div class="d-grid">#}
{#                                    <button class="btn btn-primary btn-lg" id="submitButton" type="submit">#}
{#                                        Submit#}
{#                                    </button>#}
{#                                </div>#}
                                <div class="d-grid">
                                <button class="btn text-decoration-none linkart" type="submit">
                                    Envoyer l'email
                                    <i class="fa-regular fa-paper-plane fa-xs ms-1"></i>
                                </button>
                                </div>
                                {{ form_end(contactform) }}
                                <!-- End of contact form -->

                            </div>
                        </div>
                    </div>
                </div>

            </div>

            <div class="col-12 col-lg-3 mt-3">

                {% if socials is not empty %}
                    <div class="shadow-lg">
                        <ul class="list-group list-group-flush">
                            <dt class="list-group-item text-center foottxt">Me suivre</dt>
                            <li class="list-group-item d-flex my-2 justify-content-between align-items-center">
                                {% for social in socials %}
                                    <a href="{{ social.link }}" target="_blank" class="text-decoration-none">
                                        <i class="{{ social.logo }} fa-2xl"></i>
                                    </a>
                                {% endfor %}
                            </li>
                        </ul>
                    </div>
                {% endif %}
            </div>
        </div>
    </div>
{% endblock %}

