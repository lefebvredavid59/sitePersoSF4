{% extends 'base.html.twig' %}

{% block title %}{{ parent() }} Moi{% endblock %}

{% block body %}
    <div class="container">

        <h1 class="navhead display-2">A PROPOS DE MOI</h1>

        <div class="row">
            <div class="col-12 col-lg-9">
                {% if moi is not empty %}
                    {% for about in moi %}
                        {{ about.content|raw }}
                    {% endfor %}
                    {% else %}
                        <div class="card text-center mt-3">
                            <div class="h1 fw-light navhead">En construction</div>
                            <img class="img-fluid" src="{{ asset('assets/gif/under/') }}{{ random(1, 3) }}.gif" alt="Page no found">
                        </div>
                {% endif %}
            </div>

            <div class="col-12 col-lg-3 mt-3">

                {% if socials is not empty %}
                    <div class="shadow-lg">
                        <ul class="list-group list-group-flush">
                            <dt class="list-group-item text-center foottxt">Me suivre</dt>
                            <li class="list-group-item d-flex my-2 justify-content-between align-items-center">
                                {% for social in socials %}
                                    <a href="{{ social.link }}" target="_blank" class="text-decoration-none">
                                        <i class="{{ social.logo }} fa-2xl"></i>
                                    </a>
                                {% endfor %}
                            </li>
                        </ul>
                    </div>
                {% endif %}
            </div>
        </div>
    </div>
{% endblock %}

