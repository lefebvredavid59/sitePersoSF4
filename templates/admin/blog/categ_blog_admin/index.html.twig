{% extends 'base.html.twig' %}

{% block title %}{{ parent() }} Gestion Catégorie Blog{% endblock %}

{% block body %}
    <div class="container">
        <h1 class="navhead display-2 text-center">Gestion Catégorie Blog</h1>

        <div class="card">
            <div class="table-responsive card-body shadow-lg">
                <table class="table text-center">
                    <thead>
                    <tr>
                        <th>Nom</th>
                        <th>Slug</th>
                        <th>Voir</th>
                        <th>Modifier</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for categ_blog in categ_blogs %}
                        <tr>
                            <td>{{ categ_blog.name }}</td>
                            <td>{{ categ_blog.slug }}</td>
                            <td>
                                <a class="text-decoration-none" href="{{ path('categ_blog_admin_show', {'id': categ_blog.id}) }}">Voir</a>
                            </td>
                            <td>
                                <a class="text-decoration-none" href="{{ path('categ_blog_admin_edit', {'id': categ_blog.id}) }}">Modifier</a>
                            </td>
                        </tr>
                    {% else %}
                        <tr class="text-center">
                            <td colspan="4">Aucun enregistrement trouvé</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>


                <div class="d-grid">
                    <a href="{{ path('categ_blog_admin_new') }}" class="btn btn-outline-info">Créer une
                        nouvelle catégorie</a>
                </div>
            </div>
        </div>
    </div>
{% endblock %}