{% extends 'base.html.twig' %}

{% block title %}{{ parent() }} Gestion Catégorie {{ categ_blog.name }}{% endblock %}

{% block body %}
    <div class="container">
        <h1 class="navhead display-2 text-center">Gestion Catégorie {{ categ_blog.name }}</h1>
        <div class="col-6 mx-auto">
            <div class="card">
                <div class="card-body shadow-lg">

                    <table class="table text-center">
                        <tbody>
                        <tr>
                            <th>Nom</th>
                            <td>{{ categ_blog.name }}</td>
                        </tr>
                        <tr>
                            <th>Slug</th>
                            <td>{{ categ_blog.slug }}</td>
                        </tr>
                        </tbody>
                    </table>

                    <div class="d-grid">
                        <a href="{{ path('categ_blog_admin_index') }}" class="btn btn-outline-primary my-3">Retour a la
                            liste</a>

                        <a href="{{ path('categ_blog_admin_edit', {'id': categ_blog.id}) }}"
                           class="btn btn-outline-secondary">Modifier</a>

                        {{ include('admin/blog/categ_blog_admin/_delete_form.html.twig') }}
                    </div>

                </div>
            </div>
        </div>
    </div>
{% endblock %}