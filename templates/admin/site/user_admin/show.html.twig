{% extends 'base.html.twig' %}

{% block title %}{{ parent() }} Utilisateur {{ user.pseudo }}{% endblock %}

{% block body %}
    <div class="container">
        <h1 class="navhead display-2 text-center">Utilisateur {{ user.pseudo }}</h1>

        <div class="col-6 mx-auto">
        <div class="card">
            <div class="card-body shadow-lg">

                <table class="table text-center">
                    <tbody>
                    <tr>
                        <th>Email</th>
                        <td>{{ user.email }}</td>
                    </tr>
                    <tr>
                        <th>Pseudo</th>
                        <td>{{ user.pseudo }}</td>
                    </tr>
                    <tr>
                        <th>Register_date</th>
                        <td>{{ user.registerDate ? user.registerDate|date('d-m-Y H:i:s') : '' }}</td>
                    </tr>
                    <tr>
                        <th>Last_co</th>
                        <td>{{ user.lastCo ? user.lastCo|date('d-m-Y H:i:s') : '' }}</td>
                    </tr>
                    <tr>
                        <th>IsVerified</th>
                        <td>{{ user.isVerified ? 'Oui' : 'Non' }}</td>
                    </tr>
                    </tbody>
                </table>
                <div class="d-grid">
                    <a href="{{ path('user_admin_index') }}" class="btn btn-outline-primary my-3">Retour a la liste</a>

                    <a href="{{ path('user_admin_edit', {'id': user.id}) }}"
                       class="btn btn-outline-secondary">Modifier</a>

                    {{ include('admin/site/user_admin/_delete_form.html.twig') }}
                </div>

            </div>
        </div>
        </div>
    </div>
{% endblock %}
