{% extends 'base.html.twig' %}

{% block title %}{{ parent() }} Gestion présentation{% endblock %}

{% block body %}
    <div class="container">
        <h1 class="navhead display-2 text-center">Gestion présentation</h1>

        <div class="card">
            <div class="table-responsive card-body shadow-lg">
                <table class="table">
                    <thead>
                    <tr>
                        <th>Content</th>
                        <th>Voir</th>
                        <th>Modifier</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for about in abouts %}
                        <tr>
                            <td>{{ about.content|raw }}</td>
                            <td>
                                <a class="text-decoration-none" href="{{ path('about_admin_show', {'id': about.id}) }}">Voir</a>
                            </td>
                            <td>
                                <a class="text-decoration-none" href="{{ path('about_admin_edit', {'id': about.id}) }}">Modifier</a>
                            </td>
                        </tr>
                    {% else %}
                        <tr class="text-center">
                            <td colspan="3">no records found</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
                <div class="d-grid">
                    <a href="{{ path('about_admin_new') }}" class="btn btn-outline-info">Créer un nouveau</a>
                </div>
            </div>
        </div>

    </div>
{% endblock %}
