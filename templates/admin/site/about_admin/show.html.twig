                        <a href="{{ path('about_admin_edit', {'id': about.id}) }}" class="btn btn-outline-secondary">Modifier</a>

                        {{ include('admin/site/about_admin/_delete_form.html.twig') }}
                    </div>

                </div>
            </div>
        </div>
