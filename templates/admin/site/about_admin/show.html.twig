{% extends 'base.html.twig' %}

{% block title %}{{ parent() }} Présentation{% endblock %}

{% block body %}
    <div class="container">
        <h1 class="navhead display-2 text-center">Présentation</h1>

        <div class="col-6 mx-auto">
            <div class="card">
                <div class="card-body shadow-lg">

                    <table class="table text-center">
                        <tbody>
                        <tr>
                            <th>Présentation</th>
                            <td>{{ about.content|raw }}</td>
                        </tr>
                        </tbody>
                    </table>
                    <div class="d-grid">

                        <a href="{{ path('about_admin_index') }}" class="btn btn-outline-primary my-3">Retour a la
