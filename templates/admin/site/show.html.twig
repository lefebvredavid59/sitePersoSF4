{% extends 'base.html.twig' %}

{% block title %}{{ parent() }} Gestion Site{% endblock %}

{% block body %}
    <div class="container">
        <h1 class="navhead display-2 text-center">Gestion Site</h1>

        <div class="card">
            <div class="card-body shadow-lg">

                <table class="table text-center">
                    <tbody>
                    <tr>
                        <th>Inscription</th>
                        <td>{{ site.register ? 'Oui' : 'Non' }}</td>
                    </tr>
                    <tr>
                        <th>Dispo</th>
                        <td>{{ site.avaible ? 'Oui' : 'Non' }}</td>
                    </tr>
                    </tbody>
                </table>

                <div class="d-grid">
                    <a href="{{ path('site_index') }}" class="btn btn-outline-primary my-3">Retour a la liste</a>

                    <a href="{{ path('site_edit', {'id': site.id}) }}" class="btn btn-outline-secondary">Modifier</a>

                    {{ include('Admin/Site/_delete_form.html.twig') }}
                </div>

            </div>
        </div>
    </div>
{% endblock %}
