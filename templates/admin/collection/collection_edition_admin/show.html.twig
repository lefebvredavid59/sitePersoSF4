{% extends 'base.html.twig' %}

{% block title %}{{ parent() }} Fiche édition {{ collection_edition.name }}{% endblock %}

{% block body %}
    <div class="container">
        <h1 class="navhead display-2 text-center">Fiche édition {{ collection_edition.name }}</h1>

        <div class="col-6 mx-auto">

            <div class="card">
                <div class="card-body shadow-lg">

                    <table class="table text-center">
                        <tbody>
                        <tr>
                            <th>Nom</th>
                            <td>{{ collection_edition.name }}</td>
                        </tr>
                        <tr>
                            <th>Slug</th>
                            <td>{{ collection_edition.slug }}</td>
                        </tr>
                        <tr>
                            <th>Picture</th>
                            <td>
                                {% if collection_edition.picture is not empty %}
                                    <a target="_blank" class="text-decoration-none"
                                       href="{{ asset('uploads/CategCollection/' ~ collection_edition.picture ) }}">Image</a>
                                {% else %}
                                    Non
                                {% endif %}
                            </td>
                        </tr>
                        </tbody>
                    </table>

                    <div class="d-grid">
                        <a href="{{ path('collection_edition_admin_index') }}" class="btn btn-outline-primary my-3">Retour
                            a
                            la liste</a>

                        <a href="{{ path('collection_edition_admin_edit', {'id': collection_edition.id}) }}"
                           class="btn btn-outline-secondary">Modifier</a>

                        {{ include('admin/collection/collection_edition_admin/_delete_form.html.twig') }}
                    </div>

                </div>
            </div>

        </div>
    </div>
{% endblock %}
