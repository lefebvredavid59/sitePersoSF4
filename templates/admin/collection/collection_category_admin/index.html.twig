{% extends 'base.html.twig' %}

{% block title %}{{ parent() }} Gestion Catégorie Collection{% endblock %}

{% block body %}
    <div class="container">
        <h1 class="navhead display-2 text-center">Gestion Catégorie Collection</h1>

        <div class="card">
            <div class="table-responsive card-body shadow-lg">
                <table class="table">
                    <thead>
                    <tr>
                        <th>Nom</th>
                        <th>Slug</th>
                        <th>Image</th>
                        <th>Voir</th>
                        <th>Modifier</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for collection_category in collection_categories %}
                        <tr>
                            <td>{{ collection_category.name }}</td>
                            <td>{{ collection_category.slug }}</td>
                            <td>
                                {% if collection_category.picture is not empty %}
                                    <a target="_blank" class="text-decoration-none"
                                       href="{{ asset('uploads/CategCollection/' ~ collection_category.picture ) }}">Image</a>
                                {% else %}
                                    Non
                                {% endif %}
                            </td>
                            <td>
                                <a class="text-decoration-none" href="{{ path('collection_category_admin_show', {'id': collection_category.id}) }}">Voir</a>
                            </td>
                            <td>
                                <a class="text-decoration-none" href="{{ path('collection_category_admin_edit', {'id': collection_category.id}) }}">Modifier</a>
                            </td>
                        </tr>
                    {% else %}
                        <tr class="text-center">
                            <td colspan="5">Aucun enregistrement trouvé</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>


                <div class="d-grid">
                    <a href="{{ path('collection_category_admin_new') }}" class="btn btn-outline-info">Créer une
                        nouvelle catégorie</a>
                </div>
            </div>
        </div>
    </div>
{% endblock %}