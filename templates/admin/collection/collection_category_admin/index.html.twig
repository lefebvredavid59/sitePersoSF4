{% extends 'base.html.twig' %}

{% block title %}CollectionCategory index{% endblock %}

{% block body %}
    <h1>CollectionCategory index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Slug</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for collection_category in collection_categories %}
            <tr>
                <td>{{ collection_category.id }}</td>
                <td>{{ collection_category.name }}</td>
                <td>{{ collection_category.slug }}</td>
                <td>
                    <a href="{{ path('collection_category_admin_show', {'id': collection_category.id}) }}">show</a>
                    <a href="{{ path('collection_category_admin_edit', {'id': collection_category.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('collection_category_admin_new') }}">Create new</a>
{% endblock %}
