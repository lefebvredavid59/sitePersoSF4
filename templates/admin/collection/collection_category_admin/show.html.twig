{% extends 'base.html.twig' %}

{% block title %}{{ parent() }} Fiche catégorie {{ collection_category.name }}{% endblock %}

{% block body %}
    <div class="container">
        <h1 class="navhead display-2 text-center">Fiche catégorie {{ collection_category.name }}</h1>
        <div class="col-6 mx-auto">

            <div class="card">
                <div class="card-body shadow-lg">

                    <table class="table text-center">
                        <tbody>
                        <tr>
                            <th>Name</th>
                            <td>{{ collection_category.name }}</td>
                        </tr>
                        <tr>
                            <th>Slug</th>
                            <td>{{ collection_category.slug }}</td>
                        </tr>
                        <tr>
                            <th>Image</th>
                            <td>
                                {% if collection_category.picture is not empty %}
                                    <a target="_blank" class="text-decoration-none"
                                       href="{{ asset('uploads/CategCollection/' ~ collection_category.picture ) }}">Image</a>
                                {% else %}
                                    Non
                                {% endif %}
                            </td>
                        </tr>
                        </tbody>
                    </table>

                    <div class="d-grid">
                        <a href="{{ path('collection_category_admin_index') }}" class="btn btn-outline-primary my-3">Retour
                            a la liste</a>

                        <a href="{{ path('collection_category_admin_edit', {'id': collection_category.id}) }}"
                           class="btn btn-outline-secondary">Modifier</a>

                        {{ include('admin/collection/collection_category_admin/_delete_form.html.twig') }}
                    </div>

                </div>
            </div>
        </div>
    </div>
{% endblock %}
