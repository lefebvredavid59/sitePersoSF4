{% extends 'base.html.twig' %}

{% block title %}{{ parent() }} Voir Réalisaiton {{ realisation.name }}{% endblock %}

{% block body %}
    <div class="container">
        <h1 class="navhead display-2 text-center">Voir Réalisaiton {{ realisation.name }}</h1>

        <div class="card">
            <div class="card-body shadow-lg">

                <table class="table text-center">
                    <tbody>
                    <tr>
                        <th>Nom</th>
                        <td>{{ realisation.name }}</td>
                    </tr>
                    <tr>
                        <th>Slug</th>
                        <td>{{ realisation.slug }}</td>
                    </tr>
                    <tr>
                        <th>Picture</th>
                        <td>{{ realisation.picture }}</td>
                    </tr>
                    <tr>
                        <th>Content</th>
                        <td>{{ realisation.content|raw }}</td>
                    </tr>
                    <tr>
                        <th>Link</th>
                        <td>{{ realisation.link }}</td>
                    </tr>
                    </tbody>
                </table>
                <div class="d-grid">
                    <a href="{{ path('realisation_admin_index') }}" class="btn btn-outline-primary my-3">Retour a la
                        liste</a>
                    <a href="{{ path('realisation_admin_edit', {'id': realisation.id}) }}"
                       class="btn btn-outline-secondary">Modifier</a>
                    {{ include('admin/real/realisation_admin/_delete_form.html.twig') }}
                </div>

            </div>
        </div>
    </div>
{% endblock %}