{% extends 'base.html.twig' %}

{% block title %}{{ parent() }} Gestion Catégorie Réalisation {{ categ_real.name }}{% endblock %}

{% block body %}
    <div class="container">
        <h1 class="navhead display-2 text-center">Gestion Catégorie Réalisation {{ categ_real.name }}</h1>

        <div class="card">
            <div class="card-body shadow-lg">

                <table class="table text-center">
                    <tbody>
                    <tr>
                        <th>Name</th>
                        <td>{{ categ_real.name }}</td>
                    </tr>
                    <tr>
                        <th>Slug</th>
                        <td>{{ categ_real.slug }}</td>
                    </tr>
                    </tbody>
                </table>

                <div class="d-grid">
                    <a href="{{ path('categ_real_admin_index') }}" class="btn btn-outline-primary my-3">Retour a la
                        liste</a>

                    <a href="{{ path('categ_real_admin_edit', {'id': categ_real.id}) }}"
                       class="btn btn-outline-secondary">Modifier</a>

                    {{ include('admin/real/categ_real_admin/_delete_form.html.twig') }}
                </div>

            </div>
        </div>
    </div>
{% endblock %}